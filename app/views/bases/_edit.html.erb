<% provide(:title, 'Edit') %>

<div class="modal-dialog">
  <!-- モーダルコンテンツ:モーダルに表示させる内容-->
  <div class="modal-content">
    <!-- モーダルコンテンツのヘッダー部分-->
    <div class="modal-header">
      <h1 class="modal-title">拠点の編集</h1>
      <!-- &timesは「×ボタン」の表示-->        
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_with(model: @base, url: basis_path(@base), local: true) do |f| %>
      
        <%= f.label :base_number, class: "label-base--edit" %>
        <%= f.text_field :base_number, class: "form-control" %>

        <%= f.label :base_branch, class: "label-base--edit" %>
        <%= f.text_field :base_branch, class: "form-control" %>

        <%= f.label :work_type, class: "label-base--edit" %>
        <%= f.text_field :work_type, class: "form-control" %>           

        <div class="center">
          <%= f.submit "更新", class: "btn btn-primary btn-block btn-base--edit" %>
        </div>      
      <% end %>
    </div>
  </div>
</div>