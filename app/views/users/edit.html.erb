<% provide(:title, "Edit") %>
<h1>基本情報一覧</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      
      <%= f.label :name, class: "label-user--edit" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-user--edit" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :department, class: "label-user--edit" %>
      <%= f.text_field :department, class: "form-control" %>

      <%= f.label :employee_number, class: "label-user--edit" %>
      <%= f.number_field :employee_number, class: "form-control", min: 001, max: 020 %>

      <%= f.label :card_id, class: "label-user--edit" %>
      <%= f.number_field :card_id, class: "form-control", min: 001, max: 020 %>

      <%= f.label :password, class: "label-user--edit" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "label-user--edit" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-block btn-user--edit" %>
    <% end %>
  </div>
</div>